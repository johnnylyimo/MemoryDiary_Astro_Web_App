---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface LayoutProps {
    title:string;
    description:string;
    tailwindBgColor?:string;
}
const {title, description,tailwindBgColor} = Astro.props as LayoutProps;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead seoTitle= {title} seoDescription={description} />
    </head>
    <body class={tailwindBgColor}>
        <Header />
        <slot /> 
        <Footer />
    </body>
</html>