---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout   title ='Home | MemoryDiary'
description="MemoryDiary's home page" tailwindBgColor='bg-[#E1BEE7]'>
	<main class="w-full h-screen flex flex-col lg:flex-row gap-8 text-center">
		<section class="max-w-screen-sm mx-auto lg:max-w-xxl rounded-lg p-2 bg-[#ce93d8]">
			<h1 class="text-2xl font-bold uppercase pt-4 tracking-wide">
				World of the day
			</h1>
			<p class="text-xl font-bold">
				Today will be better than yesterday
			</p>
			<p class="text-xl font-medium mt-6">
				Anytime something positive happens, make a note of it and come back to it later
			</p>
			<form class="mt-6 p-2">
				<label for='message' class="block mb-2 text-md font-medium text-gray-900">
					Write new memory below
				</label>
				<textarea rows={4} class="block w-full text-base p-2 text-gray-900 bg-[#ce93d8] rounded-lg border-4 border-[#ac5eb9dc] focus:outline-none" placeholder='Write new memory here ...'>
				</textarea>
				<button class="text-white text-2xl font-medium bg-[#ac5eb9dc]">
					Save
				</button>
			</form>
		</section>
	</main>
</BaseLayout>

